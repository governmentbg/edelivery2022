<EditForm Model="@model" OnValidSubmit="SubmitFormAsync">
    <DataAnnotationsValidator />

    <h2>@Localizer["Title"]</h2>

    <section class="form-section">
        <div class="form-col">
            <label for="BlobId">@Localizer["BlobId"]<span class="txt-red">*</span></label>
            <div class="form-element">
                <BlobField id="BlobId" Type="@FileType.Registration" @bind-Value="model.BlobValue" />
                <ValidationMessage For="() => model.BlobValue" />
            </div>
        </div>
        <div class="form-col">
            <label for="BlobId">@Localizer["Description"]</label>
            <div class="form-element">
                <InputTextArea id="Description" @bind-Value="model.Description" />
                <ValidationMessage For="() => model.Description" />
            </div>
        </div>
    </section>

    <section class="form-section form-row button-row-right">
        <button class="btn-border btn-m" type="button" @onclick="CancelAsync">@Localizer["CancelBtn"]</button>
        <button class="btn-primary btn-m" type="submit">@Localizer["AddBtn"]</button>
    </section>
</EditForm>
