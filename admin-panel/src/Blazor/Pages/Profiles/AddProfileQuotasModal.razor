@if (model != null)
{
    <EditForm Model="@model" OnValidSubmit="SaveFormAsync">
        <DataAnnotationsValidator />

        <h2>@Localizer["Title"]</h2>

        <section class="form-section">
            <div class="form-col">
                <label for="@nameof(AddProfileQuotasModalModel.StorageQuotaInMb)">
                    @Localizer["FormStorageQuotaInMb"]
                </label>
                <div class="form-element">
                    <InputNumber id="@nameof(AddProfileQuotasModalModel.StorageQuotaInMb)"
                                 @bind-Value="model.StorageQuotaInMb" />
                    <ValidationMessage For="@(() => model.StorageQuotaInMb)" />
                </div>
            </div>
        </section>

        <section class="form-section form-row button-row-right">
            <button class="btn-border btn-m" type="button" @onclick="CancelAsync">@Localizer["BtnCancel"]</button>
            <button class="btn-primary btn-m" type="submit">@Localizer["BtnSubmit"]</button>
        </section>
    </EditForm>
}
