@page "/seos-participants/create"
@attribute [Authorize]

<Breadcrumb Items="@(
    new Dictionary<string, string>()
    {
        { "home", "" },
        { "seos-participants", "seos-participants" },
        { "create" , null}
    })" />

<div class="wrapper content-wrapper">
    <div class="cols-wrapper">
        <NavMenu />
        <div class="content-right">
            <h3>@Localizer["TitleCreate"]</h3>

            @if (model != null)
            {
                <EditForm Model="@model" OnValidSubmit="SaveAsync">
                    <DataAnnotationsValidator />
                    <div class="single-col">
                        <section class="form-section">
                            <ul class="col-list">
                                <li class="form-row">
                                    <label for="@nameof(CreateModel.Identifier)">
                                        @Localizer["FormIdentifier"]<span class="txt-red">*</span>
                                    </label>
                                    <div class="form-element">
                                        <Select2Field type="text"
                                                      id="@nameof(CreateModel.Identifier)"
                                                      @bind-Value="model.Identifier"
                                                      Url="nomenclatures/registeredEntities" />
                                        <ValidationMessage For="@(() => model.Identifier)" />
                                    </div>
                                </li>
                                <li class="form-row">
                                    <label for="@nameof(CreateModel.ServiceAddress)">
                                        @Localizer["FormServiceAddress"]<span class="txt-red">*</span>
                                    </label>
                                    <div class="form-element">
                                        <InputText type="text"
                                                   id="@nameof(CreateModel.ServiceAddress)"
                                                   @bind-Value="model.ServiceAddress" />
                                        <ValidationMessage For="@(() => model.ServiceAddress)" />
                                    </div>
                                </li>
                            </ul>
                        </section>

                        <section class="form-section form-row button-row-right">
                            <a class="btn btn-border btn-l"
                               href="seos-participants">
                                @Localizer["BtnCancel"]
                            </a>
                            <button class="btn-primary btn-l" type="submit">@Localizer["BtnSubmit"]</button>
                        </section>
                    </div>
                </EditForm>
            }
        </div>
    </div>
</div>
