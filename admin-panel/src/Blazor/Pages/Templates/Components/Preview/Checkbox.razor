@using ED.AdminPanel.Blazor.Pages.Templates.Components.Models

<div class="checkbox-holder">
    <input type="checkbox" id="@Model.Id" class="@Model.CustomClass" @bind="Model.Value">
    <label for="@Model.Id" style="width: 100%;">@Model.Label</label>
</div>

@code
{
    [Parameter] public CheckboxComponent Model { get; set; }

    protected override void OnParametersSet()
    {
        if (this.Model == null)
        {
            throw new Exception($"Required parameter {nameof(Model)} is null");
        }
    }
}
