@using ED.AdminPanel.Blazor.Pages.Templates.Components.Models
@inject IStringLocalizer<Hidden> Localizer

<label for="@Model.Id">@Model.Label <i>@Localizer["HiddenField"]</i>:</label>
<div class="form-element">
    <input type="text" id="@Model.Id" @bind="Model.Value" />
</div>

@code
{
    [Parameter] public HiddenComponent Model { get; set; }

    protected override void OnParametersSet()
    {
        if (this.Model == null)
        {
            throw new Exception($"Required parameter {nameof(Model)} is null");
        }
    }
}
