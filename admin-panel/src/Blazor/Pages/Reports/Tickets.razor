@page "/reports/tickets"
@using ED.DomainServices.Admin
@using ED.DomainServices
@inherits PagedComponent
@attribute [Authorize]

<Breadcrumb Items="@(
    new Dictionary<string, string>()
    {
        { "home", "" },
        { "reports", "reports" },
        { "tickets", null }
    })" />

<div class="wrapper content-wrapper">
    <div class="cols-wrapper">
        <NavMenu />
        <div class="content-right">
            <h3>@Localizer["Title"]</h3>

            <EditForm EditContext="@editContext" OnValidSubmit="Search">
                <DataAnnotationsValidator />
                <div class="single-col">
                    <section class="form-section">
                        <ul class="col-list">
                            <li class="form-row">
                                <label for="@nameof(SearchTicketsModel.From)">
                                    @Localizer["FormFrom"]<span class="txt-red">*</span>
                                </label>
                                <div class="form-element">
                                    <DateField id="@nameof(SearchTicketsModel.From)" @bind-Value="model.From" Placeholder=@Constants.DateTimeFormat />
                                    <ValidationMessage For="@(() => model.From)" />
                                </div>
                            </li>
                            <li class="form-row">
                                <label for="@nameof(SearchTicketsModel.To)">
                                    @Localizer["FormTo"]<span class="txt-red">*</span>
                                </label>
                                <div class="form-element">
                                    <DateField id="@nameof(SearchTicketsModel.To)" @bind-Value="model.To" Placeholder=@Constants.DateTimeFormat />
                                    <ValidationMessage For="@(() => model.To)" />
                                </div>
                            </li>
                        </ul>
                    </section>

                    <section class="form-section form-row button-row-right">
                        <button class="btn-primary btn-l" type="submit">@Localizer["BtnSearch"]</button>
                    </section>
                </div>
            </EditForm>

            @if (hasSentRequest)
            {
                <div style="padding: 15px 0px; height: 45px;">
                    <a href="@recordsReportLink"
                       target="_blank"
                       rel="noopener noreferrer"
                       download
                       class="btn btn-border btn-m butright">
                        @Localizer["BtnExport"]
                    </a>
                </div>

                <div class="table-responsive" style="position: relative">
                    @if (IsLoading)
                    {
                        <div class="loader-container">
                        </div>
                    }

                    <table class="list">
                        <tbody>
                            <tr>
                                <th colspan="16">
                                    @recordsTableTitle
                                </th>
                            </tr>
                            <tr>
                                <th>@Localizer["LabelTicketStatDate"]</th>
                                <th>@Localizer["LabelReceivedTicketIndividuals"]</th>
                                <th>@Localizer["LabelReceivedPenalDecreeIndividuals"]</th>
                                <th>@Localizer["LabelReceivedTicketLegalEntites"]</th>
                                <th>@Localizer["LabelReceivedPenalDecreeLegalEntites"]</th>
                                <th>@Localizer["LabelInternalServed"]</th>
                                <th>@Localizer["LabelExternalServed"]</th>
                                <th>@Localizer["LabelAnnulled"]</th>
                                <th>@Localizer["LabelEmailNotifications"]</th>
                                <th>@Localizer["LabelPhoneNotifications"]</th>
                                <th>@Localizer["LabelDeliveredTicketIndividuals"]</th>
                                <th>@Localizer["LabelDeliveredPenalDecreeIndividuals"]</th>
                                <th>@Localizer["LabelDeliveredTicketLegalEntites"]</th>
                                <th>@Localizer["LabelDeliveredPenalDecreeLegalEntites"]</th>
                                <th>@Localizer["LabelSentToActiveProfiles"]</th>
                                <th>@Localizer["LabelSentToPassiveProfiles"]</th>
                            </tr>

                            @if (records == null)
                            {
                                <tr>
                                    <td colspan="16">
                                        <div class="loader page-loader show">
                                        </div>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @if (!records.Result.Any())
                                {
                                    <tr>
                                        <td colspan="16">@Localizer["NoItems"]</td>
                                    </tr>
                                }

                                @foreach (var record in records.Result)
                                {
                                    <tr>
                                        <td>@(record.TicketStatDate.ToLocalDateTime().ToString("dd.MM.yyyy"))</td>
                                        <td>@(record.ReceivedTicketIndividuals)</td>
                                        <td>@(record.ReceivedPenalDecreeIndividuals)</td>
                                        <td>@(record.ReceivedTicketLegalEntites)</td>
                                        <td>@(record.ReceivedPenalDecreeLegalEntites)</td>
                                        <td>@(record.InternalServed)</td>
                                        <td>@(record.ExternalServed)</td>
                                        <td>@(record.Annulled)</td>
                                        <td>@(record.EmailNotifications)</td>
                                        <td>@(record.PhoneNotifications)</td>
                                        <td>@(record.DeliveredTicketIndividuals)</td>
                                        <td>@(record.DeliveredPenalDecreeIndividuals)</td>
                                        <td>@(record.DeliveredTicketLegalEntites)</td>
                                        <td>@(record.DeliveredPenalDecreeLegalEntites)</td>
                                        <td>@(record.SentToActiveProfiles)</td>
                                        <td>@(record.SentToPassiveProfiles)</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
